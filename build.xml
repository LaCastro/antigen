<project default="build">

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="build">
        <mkdir dir="build/classes"/>
        <javac srcdir="." destdir="build/classes" includeantruntime="false"/>
        <jar destfile="build/Antigen.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="Antigen"/>
            </manifest>
        </jar>        
    </target>

    <target name="run">
        <java jar="build/Antigen.jar" fork="true" maxmemory="1G"/>
    </target>

</project>

